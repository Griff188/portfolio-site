<header class="header">
	<div class="header-content">
		<h1 class="site-name">Griffin Rabins</h1>
		<nav class="nav">
			<a href="/" class="nav-button">Home</a>
			<a href="/resume" class="nav-button">Resume</a>
		</nav>
	</div>
</header>

<style>
	.header {
		background-color: #333;
		color: white;
		padding: 1rem 0;
		position: sticky;
		top: 0;
		z-index: 100;
	}

	.header-content {
		max-width: 1200px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		padding: 0 1rem;
	}

	.site-name {
		margin: 0;
		font-size: 1.5rem;
	}

	.nav {
		display: flex;
		gap: 1rem;
	}

	.nav-button {
		color: white;
		text-decoration: none;
		padding: 0.5rem 1rem;
		border: 1px solid white;
		border-radius: 4px;
		transition: background-color 0.3s;
	}

	.nav-button:hover {
		background-color: white;
		color: #333;
	}
</style>