<style>
	.portfolio-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 1rem;
		max-width: 1200px;
		margin: 2rem auto;
		padding: 0 1rem;
	}

	.photo-item {
		position: relative;
		aspect-ratio: 1;
		overflow: hidden;
		border-radius: 8px;
	}

	.photo-item a {
		display: block;
		width: 100%;
		height: 100%;
		text-decoration: none;
		color: inherit;
	}

	.photo-slot {
		width: 100%;
		height: 100%;
		display: flex;
		align-items: flex-end;
		justify-content: flex-start;
		padding: 1rem;
		box-sizing: border-box;
		transition: opacity 0.3s;
	}

	.photo-text {
		color: white;
		font-weight: bold;
		text-shadow: 1px 1px 2px rgba(0,0,0,0.7);
	}

	.hover-overlay {
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background-color: rgba(0, 0, 0, 0.5);
		display: flex;
		align-items: center;
		justify-content: center;
		opacity: 0;
		transition: opacity 0.3s;
		color: white;
		font-size: 1.5rem;
		font-weight: bold;
		text-transform: uppercase;
	}

	.photo-item:hover .hover-overlay {
		opacity: 1;
	}

	.photo-item:hover .photo-slot {
		opacity: 0.3;
	}
</style>
